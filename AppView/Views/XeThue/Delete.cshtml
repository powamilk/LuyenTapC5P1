@model AppView.Models.XeThue

<h2>Xóa Xe Thuê</h2>

<div>
    <h4>Bạn có chắc chắn muốn xóa xe thuê này?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Tên Xe</dt>
        <dd>@Model.TenXe</dd>

        <dt>Hãng Xe</dt>
        <dd>@Model.HangXe</dd>

        <dt>Ngày Thuê</dt>
        <dd>@Model.NgayThue.ToShortDateString()</dd>

        <dt>Ngày Trả</dt>
        <dd>@Model.NgayTra.ToShortDateString()</dd>

        <dt>Trạng Thái</dt>
        <dd>@Model.TrangThai</dd>

        <dt>Giá Thuê Mỗi Ngày</dt>
        <dd>@Model.GiaThueMoiNgay</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="ID" value="@Model.ID" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
    </form>
</div>
